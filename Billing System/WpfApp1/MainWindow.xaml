<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#388E3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8 4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="13"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#388E3C" CornerRadius="4" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Circular Logo -->
                <Ellipse Grid.Column="0" Width="73" Height="73" Margin="10,0,0,0" 
                         VerticalAlignment="Center" RenderTransformOrigin="0.65,0.527">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="E:\Billing System\logo.jpg" 
                                   Stretch="UniformToFill"/>
                    </Ellipse.Fill>
                </Ellipse>



                <!-- Header Text -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="AAPNA CHEMIST" FontWeight="Bold" FontSize="24" 
                               Foreground="White" TextAlignment="Center"/>
                    <TextBlock Text="Hathi Bhai Patel Building, Shop No.1/2, Dist.Palghar" 
                               Foreground="#E8F5E9" TextAlignment="Center"/>
                    <TextBlock Text="Bhiwandi, Wada Road, Opp.Police Stn, Kudus-421312." 
                               Foreground="#E8F5E9" TextAlignment="Center"/>
                    <TextBlock Text="GST NO: 27AEGPG3762F1ZM   Mob: 9890581131" 
                               Foreground="#E8F5E9" TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Transaction Info -->
        <Border Grid.Row="1" BorderBrush="#BDBDBD" BorderThickness="0,0,0,1" Padding="0,0,0,5" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding BillNumber, StringFormat='Bill #: {0}'}" FontWeight="Bold" Grid.Column="0"/>
                <TextBlock Margin="35,0,746,0" Grid.Column="0" Grid.ColumnSpan="2" RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="0.026"/>
                            <RotateTransform Angle="-0.316"/>
                            <TranslateTransform Y="0.02"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform><Run Text="User: "/><Run Language="en-in" Text="ADMIN"/></TextBlock>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="1">
                    <TextBlock Text="{Binding InvoiceDate, StringFormat='Date: {0}'}" Margin="0,0,20,0"/>
                    <TextBlock Text="Counter: POS"/>
                </StackPanel>

                <TextBlock Text="{Binding CurrentTime, StringFormat='Time: {0}'}" Grid.Column="2"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Available Products -->
            <GroupBox Header="Available Products" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search and Filter -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="SearchBox" Width="200" Padding="5" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="Search products..." Foreground="Gray" FontStyle="Italic"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <Button Content="Search" Click="SearchButton_Click" Margin="10,0,0,0"/>
                        <Button Content="Clear" Click="ClearSearchButton_Click" Margin="5,0,0,0"/>
                    </StackPanel>

                    <!-- Products List -->
                    <DataGrid x:Name="ItemsDataGrid" Grid.Row="1" AutoGenerateColumns="False" 
                              IsReadOnly="True" HeadersVisibility="Column" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="80"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding Qty}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Add to Bill -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="Quantity:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="QtyTextBox" Width="50" Text="1" VerticalAlignment="Center"/>
                        <Button Content="Add to Bill" Click="AddToBillButton_Click" Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Current Bill -->
            <GroupBox Header="Current Bill" Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Bill Items -->
                    <DataGrid x:Name="BillDataGrid" AutoGenerateColumns="False" IsReadOnly="True"
                              HeadersVisibility="Column" Grid.Row="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Sr" Binding="{Binding Sr}" Width="30"/>
                            <DataGridTextColumn Header="Item" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="40"/>
                            <DataGridTextColumn Header="Rate" Binding="{Binding Rate}" Width="50"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Bill Summary -->
                    <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Margin="0,10,0,5" Padding="0,5,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Subtotal:" Grid.Row="0" Grid.Column="0"/>
                            <TextBlock Text="{Binding Subtotal, StringFormat='₹{0:F2}'}" Grid.Row="0" Grid.Column="1" FontWeight="SemiBold"/>

                            <TextBlock Text="Discount:" Grid.Row="1" Grid.Column="0" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding Discount, StringFormat='₹{0:F2}'}" Grid.Row="1" Grid.Column="1" Margin="0,5,0,0"/>

                            <TextBlock Text="Total:" Grid.Row="2" Grid.Column="0" Margin="0,5,0,0" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Total, StringFormat='₹{0:F2}'}" Grid.Row="2" Grid.Column="1" Margin="0,5,0,0" 
                                       FontWeight="Bold" Foreground="#388E3C"/>
                        </Grid>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Clear Bill" Click="ClearBillButton_Click" Background="#F57C00"/>
                        <Button Content="Preview Bill" Click="PreviewBillButton_Click" Background="#2196F3"/>
                        <Button Content="Print Bill" Click="PrintBillButton_Click"/>
                        <Button Content="Complete Sale" Click="CompleteSaleButton_Click" Background="#388E3C" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="3" Margin="0,10,0,0">
            <TextBlock Text="{Binding SavingsText}" FontWeight="Bold" Foreground="#388E3C" 
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
            <TextBlock Text="THANK YOU..! VISIT AGAIN..!" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
            <TextBlock Text="RETURNS WILL BE ACCEPTED WITHIN 7 DAYS ONLY" 
                       HorizontalAlignment="Center" FontSize="10" Foreground="#757575"/>
        </StackPanel>
    </Grid>
</Window>